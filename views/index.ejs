<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (postings.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">jpID</th>
                        <th scope="col">title</th>
                        <th scope="col">Company</th>
                        <th scope="col">description</th>
                        <th scope="col">requirements</th>
                        <th scope="col">deadline</th>
                    </tr>
                </thead>
                <tbody>
                    <% postings.forEach((player, index) => { %>
                        <tr>
                            <th scope="row"><%= player.jpID %></th>
                            <td><%= player.title %></td>
                            <td><%= player.company %></td>
                            <td><%= player.description %></td>
                            <td><%= player.requirements %></td>
                            <td>@<%= player.deadline %></td>
                            <td>
                                <a href="/edit/<%= player.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">apply</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No postings found. Go <a href="/add" >here</a> to add posting.</p>
        <% } %>
    </div>
</div>
</body>
</html>