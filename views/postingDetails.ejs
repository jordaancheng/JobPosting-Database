<% include partials/header.ejs %>
    <h1> Job Posting Details </h1>
    <div class="container">
        <% if (player) { %>
        <form class="add-player-form" action="" method="post" enctype="application/x-www-form-urlencoded">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="title">Name</label>
                    <input type="text" class="form-control" name="title" id="title" value="<%= player.title %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="company">Company</label>
                    <input type="text" class="form-control" name="company" id="company" value="<%= player.company %>" required>
                </div>
                <div class="form-group col-md-4">
                        <label for="industry">Industry</label>
                        <input type="text" class="form-control" name="industry" id="industry" value="<%= player.industry %>"required>
                </div>
                <div class="form-group col-md-4">
                    <label for="description">Description</label>
                    <input type="text" class="form-control" name="description" id="description" value="<%= player.description %>"required>
                </div>
                <div class="form-group col-md-4">
                        <label for="requirements">Requirements</label>
                        <input type="text" class="form-control" name="requirements" id="requirements" value="<%= player.requirements %>"required>
                </div>
                
                <div class="form-group col-md-4">
                        <label for="deadline">Deadline</label>
                        <input type="text" class="form-control" name="deadline" id="deadline" value="<%= player.deadline %>"required>
                </div>
                <div class="form-group col-md-4">
                        <label for="numberOfPositions">Number of Positions</label>
                        <input type="text" class="form-control" name="numberOfPositions" id="numberOfPositions" value="<%= player.numberOfPositions %>"required>
                </div>
                    
        </form>
        <% } else { %>
            <p class="text-center">No Reference..</p>
        <% } %>
</div>
</div>
</body>
</html>