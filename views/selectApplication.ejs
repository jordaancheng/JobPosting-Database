<% include partials/header.ejs %>
<h1> All applications </h1>
<div class="table-wrapper">
    <% if (postings.length > 0) {%>
    <table class="table table-hovered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">appID</th>
                <th scope="col">resume</th>
                <th scope="col">coverLetter</th>
            </tr>
        </thead>
        <tbody>
            <% postings.forEach((postings, index) => { %>
            <tr>
                <th scope="row"><%= postings.appID %></th>
                <td><%= postings.resume %></td>
                <td><%= postings.coverLetter %></td>
                <td>
                    <a href="application/<%= postings.appID %>/" target="_blank" rel="noopener"
                        class="btn btn-sm btn-success">Apply</a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <% } else { %>
    <p class="text-center">No Usable Application found. Go <a href="new/">here</a> to add an Application.</p>
    <% } %>
</div>
</div>
</body>

</html>