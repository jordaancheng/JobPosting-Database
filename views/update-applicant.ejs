<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
    <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (applicant) { %>
    <form class="add-applicant-form" action="" method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="last-name">Name</label>
                <input type="text" class="form-control" name="name" id="name" value="<%= applicant.name %>" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="username">Password</label>
                <input type="text" class="form-control" name="password" id="password" value="<%= applicant.password %>"
                    required>
            </div>
            <div class="form-group col-md-6">
                <label for="username">Currently Employed</label>
                <input type="text" class="form-control" name="currentlyEmployed" id="currentlyEmployed"
                    value="<%= applicant.currentlyEmployed %>" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-8">
                <label for="username">Phone Number</label>
                <input type="text" class="form-control" name="phoneNumber" id="phoneNumber"
                    value="<%= applicant.phoneNumber %>" required>
            </div>
            <div class="form-group col-md-8">
                <label for="username">Address</label>
                <input type="text" class="form-control" name="address" id="address" value="<%= applicant.address %>"
                    required>
            </div>
        </div>

        <button type="submit" class="btn btn-success float-right">Update applicant Information</button>
    </form>
    <% } else { %>
    <p class="text-center">applicant not found.</p>
    <% } %>
</div>
</div>
</body>

</html>