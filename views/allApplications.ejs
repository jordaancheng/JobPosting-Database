<% include partials/header.ejs %>
    <h1> All applications </h1>
    <div class="table-wrapper">
        <% if (postings.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Company</th>
                        <th scope="col">description</th>
                        <th scope="col">requirements</th>
                        <th scope="col">deadline</th>
                    </tr>
                </thead>
                <tbody>
                    <% postings.forEach((postings, index) => { %>
                        <tr>
                            <th scope="row"><%= postings.company %></th>
                            <td><%= postings.description %></td>
                            <td><%= postings.requirements %></td>
                            <td>@<%= postings.deadline %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No postings found. Go <a href="/add" >here</a> to add posting.</p>
        <% } %>
    </div>
</div>
</body>
</html>