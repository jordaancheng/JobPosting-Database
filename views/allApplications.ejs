<% include partials/header.ejs %>
<h1> All applications </h1>
<div class="table-wrapper">
    <% if (postings.length > 0) {%>
    <div>
        <button type="button" id="add" class="btn-primary float-right">Add Applications</button>
        <script type="text/javascript">
            document.getElementById("add").onclick = function () {
                location.href = document.URL + 'add/';
            };
        </script>
        <br />
    </div>
    <table class="table table-hovered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">appID</th>
                <th scope="col">resume</th>
                <th scope="col">coverLetter</th>
            </tr>
        </thead>
        <tbody>
            <% postings.forEach((postings, index) => { %>
            <tr>
                <th scope="row"><%= postings.appID %></th>
                <td><%= postings.resume %></td>
                <td><%= postings.coverLetter %></td>
                <td>
                    <a href="<%= postings.appID %>/reference/" target="_blank" rel="noopener"
                        class="btn btn-sm btn-success">References List</a>
                </td>
                <td>
                    <a href="<%= postings.appID %>/edit/" target="_blank" rel="noopener"
                        class="btn btn-sm btn-success">Edit Application</a>
                </td>
                <td>
                    <a href="<%= postings.appID %>/delete/" target="_blank" rel="noopener"
                        class="btn btn-sm btn-success">Delete Application</a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <% } else { %>
    <p class="text-center">No postings found. Go <a href="add/">here</a> to add posting.</p>
    <% } %>
</div>
</div>
</body>

</html>