<% include partials/header.ejs %>
<h1> All Applications with References</h1>
<div class="table-wrapper">
    <% if (postings.length > 0) {%>
    <table class="table table-hovered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">appID</th>
                <th scope="col">resume</th>
                <th scope="col">coverLetter</th>
            </tr>
        </thead>
        <tbody>
            <% postings.forEach((postings, index) => { %>
            <tr>
                <th scope="row"><%= postings.appID %></th>
                <td><%= postings.resume %></td>
                <td><%= postings.coverLetter %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <% } else { %>
    <p class="text-center">No postings found. Go <a href="/add">here</a> to add posting.</p>
    <% } %>
</div>
</div>
</body>

</html>